{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Vanilla components schema",
    "description": "A schema to map all components of Vanilla.",
    "type": "object",
    "patternProperties": {
        "^[a-zA-Z]+$": {
            "type": "object",
            "properties": {
                "Components": {
                    "type": "object",
                    "properties": {
                        "react": {
                            "type": ["array", "string"],
                            "items": { "type": "string" }
                        },
                        "html": { "type": "string" },
                        "css": { "type": "string" }
                    },
                    "anyOf": [{ "required": ["react"] }, { "required": ["html"] }, { "required": ["css"] }]
                },
                "Properties": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-zA-Z]+$": {
                            "oneOf": [
                                {
                                    "type": "object",
                                    "patternProperties": {
                                        "^[a-zA-Z]+$": {
                                            "type": "object",
                                            "properties": {
                                                "react": {
                                                    "type": "object",
                                                    "patternProperties": {
                                                        "^[a-zA-Z]+$": {
                                                            "type": ["string", "boolean", "array"]
                                                        }
                                                    }
                                                },
                                                "css": { "type": "string" },
                                                "html": { "type": "string" }
                                            }
                                        }
                                    }
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "react": {
                                            "type": "object",
                                            "patternProperties": {
                                                "^[a-zA-Z]+$": {
                                                    "type": ["string", "boolean", "array"]
                                                }
                                            }
                                        },
                                        "css": { "type": "string" },
                                        "html": { "type": "string" }
                                    },
                                    "required": ["react"]
                                }
                            ]
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": ["Components"]
        }
    },
    "additionalProperties": false
}
